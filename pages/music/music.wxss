/* pages/music/music.wxss */
.my-container{
  padding-bottom: 80rpx ;
}
.my-entrance-container{
  height: 200rpx;
  display: flex;
  padding: 10rpx;
  align-items: center;
  font-weight: 200;
}
.entrance-box{
  width: 100%;
}
.van-grid{
border-radius: 25rpx;
}

.entrance-box .img{
  width: 50rpx;
  height: 50rpx;
  display: block;
  padding: 10rpx;
  border-radius: 50rpx;
  background-color: #afdfe4;
} 
.my-random-container{
  height: 250rpx;
  padding: 20rpx;
  border:1rpx solid rgb(117, 117, 117,.2);
  border-radius: 25rpx;
  font-size: 36rpx;
  font-weight:550;
}
.random-text{
  margin: 0 320rpx 0 20rpx;
}
.random-text-box{
  height:48rpx ;
  padding: 10rpx 10rpx;
  padding-bottom: 0;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}
.refresh{
  width: 200rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
}
.refresh-text{
  margin-right:20rpx ;
  color: rgb(137, 151, 178);
}
.refresh-img{
  width: 40rpx;
  height: 48rpx;
}
.random-song{
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;

}
.song-img-container{
  box-sizing: border-box;
  width: 200rpx;
  height: 200rpx;
  padding: 20rpx;

}
.random-song-img{
  display: block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 15rpx;
}
.song-info-container{
  flex-grow:3;
}
.song-name{
  font-weight: 500;
  font-size: 35rpx;
  margin-bottom: 20rpx;
}
.singer-name{
  font-size: 28rpx;
  font-weight: 400;
  color: #8e8e92 ;
}